	<update id="studentStatusUpdate" parameterType="_int">
		UPDATE STUDENT
		SET STS_PROCESS = #{stsProcess}, STS_COMPLETE = #{stsComplete}
		WHERE STS_NO = #{stsNo}
	</update> -->
	

</mapper>